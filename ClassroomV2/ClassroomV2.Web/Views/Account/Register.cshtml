@model ClassroomV2.Web.Models.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<main class="form-signin">
    <h3>DATA IMPORTER</h3>
    <form id="account" method="post" asp-controller="Account" asp-action="Register">
        <h1 class="h3 mb-3 fw-normal">Create New Account</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <div class="form-floating">
                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Email address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingConfirmPassword" placeholder="Password">
                <label for="floatingConfirmPassword">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" id="foo" name="foo" />
        <button class="w-100 btn btn-lg btn-success" type="submit">Register</button>
        <a asp-area="" asp-controller="Account" asp-action="Login">Sign in</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
        <input type="hidden" asp-for="ReturnUrl" />

    </form>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://www.google.com/recaptcha/api.js?render=6LdtfXQcAAAAANMuDfVDHjr9TEEji2AbU_eVu49A"></script>
    <script>
        grecaptcha.ready(function () {
            grecaptcha.execute('6LdtfXQcAAAAANMuDfVDHjr9TEEji2AbU_eVu49A', { action: 'homepage' }).then(function (token) {
                document.getElementById("foo").value = token;
            });
        });
    </script>
}
