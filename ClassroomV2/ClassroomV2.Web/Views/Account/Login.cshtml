@model ClassroomV2.Web.Models.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}
<main class="form-signin">
    <h3>DATA IMPORTER</h3>
    <form id="account" method="post" asp-controller="Account" asp-action="Login">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-floating">
            <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <button class="w-100 btn btn-lg btn-success" type="submit">Sign in</button>
        
        <a asp-area="" asp-controller="Account" asp-action="Register">Register new account</a>
        <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
        <input type="hidden" asp-for="ReturnUrl"/>
    </form>
</main>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
